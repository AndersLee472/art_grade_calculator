    <script>
        // 页面加载完成后初始化广告
        document.addEventListener('DOMContentLoaded', function() {
            setupMarquee();
            
            // 窗口大小改变时重新设置
            window.addEventListener('resize', setupMarquee);
        });
        
        // 设置无缝循环滚动
        function setupMarquee() {
            const adText = document.querySelector('.ad-text');
            const adContainer = document.querySelector('.advertisement');
            
            // 确保文本元素足够长以实现无缝循环
            const originalText = adText.textContent;
            
            // 获取原始文本内容的宽度
            const textWidth = adText.offsetWidth;
            const containerWidth = adContainer.offsetWidth;
            
            // 根据文本长度和容器宽度调整动画速度
            // 数值越小滚动越快，这里调整为12可以保持适中的速度
            const duration = textWidth / 200;
            
            // 设置动画时间
            adText.style.animationDuration = `${duration}s`;
        }
        
        function calculateScore() {
            var identity = document.getElementById("identityInput").value;
            var scoreType = document.getElementById("scoreType").value;
            var score1 = document.getElementById("score1Input").value;
            var score2 = document.getElementById("score2Input").value;
            var resultElement = document.getElementById("result");
            var resultContainer = document.getElementById("resultContainer");
            
            // 验证输入
            if (!score1.trim() || !score2.trim()) {
                showResult("请输入两个已知的分数");
                return;
            }
            
            var knownScore1 = parseFloat(score1);
            var knownScore2 = parseFloat(score2);
            
            if (isNaN(knownScore1) || isNaN(knownScore2)) {
                showResult("请输入有效的数字");
                return;
            }
            
            var result = "";
            
            if (identity === "美术生") {
                if (scoreType === "specialty-target") {
                    var culturalScore = (knownScore2 - knownScore1 * 1.85) * 2;
                    result = `你的文化分需要考到 <span class="text-indigo-600 font-bold">${culturalScore.toFixed(2)}</span> 分`;
                } else if (scoreType === "specialty-culture") {
                    var targetScore = knownScore2 * 0.5 + knownScore1 * 1.85;
                    result = `你的合成分数是 <span class="text-indigo-600 font-bold">${targetScore.toFixed(2)}</span> 分`;
                } else if (scoreType === "culture-target") {
                    var specialtyScore = (knownScore2 - knownScore1 * 0.5) / 1.85;
                    result = `你的专业分需要考到 <span class="text-indigo-600 font-bold">${specialtyScore.toFixed(2)}</span> 分`;
                }
            } 
            else if (identity === "音乐舞蹈生") {
                if (scoreType === "specialty-target") {
                    var culturalScore = (knownScore2 - knownScore1 * 3.7) * 2;
                    result = `你的文化分需要考到 <span class="text-indigo-600 font-bold">${culturalScore.toFixed(2)}</span> 分`;
                } else if (scoreType === "specialty-culture") {
                    var targetScore = knownScore2 * 0.5 + knownScore1 * 3.7;
                    result = `你的合成分数是 <span class="text-indigo-600 font-bold">${targetScore.toFixed(2)}</span> 分`;
                } else if (scoreType === "culture-target") {
                    var specialtyScore = (knownScore2 - knownScore1 * 0.5) / 3.7;
                    result = `你的专业分需要考到 <span class="text-indigo-600 font-bold">${specialtyScore.toFixed(2)}</span> 分`;
                }
            }
            
            showResult(result);
        }
        
        function showResult(message) {
            var resultElement = document.getElementById("result");
            var resultContainer = document.getElementById("resultContainer");
            
            resultElement.innerHTML = message;
            resultContainer.classList.remove("hidden");
            
            // 添加动画效果
            resultContainer.style.opacity = "0";
            resultContainer.style.transform = "translateY(10px)";
            
            setTimeout(() => {
                resultContainer.style.transition = "all 0.3s ease";
                resultContainer.style.opacity = "1";
                resultContainer.style.transform = "translateY(0)";
            }, 10);
        }
    </script>
</body>
</html>
